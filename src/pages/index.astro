---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      /* General */
      body {
        font-family: 'Inter', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #fff;
        color: #000;
        line-height: 1.6;
      }

      main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
      }

      h1, h2, h3, p {
        margin: 0;
      }

      h1 {
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 1rem;
      }

      p {
        text-align: center;
        font-size: 1.2rem;
        margin-bottom: 2rem;
      }

      .hero {
        padding: 3rem 1rem;
        text-align: center;
      }

      .cta-button {
        display: inline-block;
        padding: 1rem 2rem;
        font-size: 1rem;
        font-weight: bold;
        background-color: #000;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        margin-top: 1rem;
      }

      .cta-button:hover {
        background-color: #444;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section class="hero">
        <h1>Profile to Notion</h1>
        <p>Transforma LinkedIn en un CRM de clase mundial en un clic.</p>
        <a href="/blog" class="cta-button">Explorar el Blog</a>
      </section>
    </main>
    <Footer />
  </body>
</html>